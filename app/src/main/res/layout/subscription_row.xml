<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="5dp"
    android:background="@drawable/subscription_row">

  <ImageView
      android:id="@+id/brandLogo"
      android:layout_width="72dp"
      android:layout_height="72dp"
      android:layout_marginStart="12dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

  <TextView
      android:id="@+id/brandTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="12dp"
      android:text="TextView"
      android:letterSpacing="0.05"
      android:textSize="18sp"
      android:textStyle="bold"
      android:textColor="@color/BLACK"
      app:layout_constraintStart_toEndOf="@+id/brandLogo"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/subscriptionDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:text="TextView"
      android:textColor="@color/LIGHT_WHITE"
      app:layout_constraintStart_toEndOf="@+id/brandLogo"
      app:layout_constraintTop_toBottomOf="@+id/brandTitle" />

  <TextView
      android:id="@+id/subscriptionPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="12dp"
      android:text="TextView"
      android:textColor="@color/PRIMARY_COLOR"
      android:textStyle="bold"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>